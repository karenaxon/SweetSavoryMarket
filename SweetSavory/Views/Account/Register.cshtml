@using SweetSavory.ViewModels

@model RegisterViewModel

<h2 class="mt-4 mb-4 text-center">Create an Account</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.LabelFor(user => user.FirstName, new {@class = "form-label"})
    @Html.TextBoxFor(user => user.FirstName, new {@class = "form-control mb-3", required = "required"})

    @Html.LabelFor(user => user.LastName, new {@class = "form-label"})
    @Html.TextBoxFor(user => user.LastName, new {@class = "form-control mb-3", required = "required"})

    @Html.LabelFor(user => user.Email, new {@class = "form-label"})
    @Html.TextBoxFor(user => user.Email, new {@class = "form-control mb-3", required = "required"})

    @Html.LabelFor(user => user.UserName, new {@class = "form-label"})
    @Html.TextBoxFor(user=> user.UserName, new {@class = "form-control mb-3",required = "required"})

    @Html.LabelFor(user=> user.Password, new {@class = "form-label"})
    @Html.PasswordFor(user=> user.Password, new {@class = "form-control mb-3",required = "required"})

    @Html.LabelFor(user=> user.ConfirmPassword, new {@class = "form-label"})
    @Html.PasswordFor(user=> user.ConfirmPassword, new {@class = "form-control mb-3",required = "required"})

    <button  class="btn btn-secondary" type="submit" value="Register">Submit</button>
}