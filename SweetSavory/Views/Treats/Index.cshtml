@using SweetSavory.Models;

<h2 class="mt-5 mb-4 text-center">The List of Treats</h2>
<hr />

@if (@Model.Count == 0)
{
  <h5>No treats have been added yet!  </h5> 
}

<ul>
  @foreach (Treat treat in Model)
  {
    <li><h5>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</h5></li>
  }
</ul>

<p class="h5 mt-5">@Html.ActionLink("Add a Treat", "Create")</p>
<p class="h5 mt-2">@Html.ActionLink("Login", "Login", "Account")</p>
<p class="h5 mt-2">@Html.ActionLink("Create an Account", "Register", "Account")</p>