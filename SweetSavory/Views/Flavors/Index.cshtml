@using SweetSavory.Models;

<h2 class="mt-4 mb-4 text-center">Flavors</h2>

@if (@Model.Count == 0)
{
  <h5>No flavors have been added yet!</h5>
} 

<ul>
  @foreach(Flavor flavor in Model)
  {
    <li><h5>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</h5></li>
  }
</ul>
