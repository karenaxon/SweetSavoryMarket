@model SweetSavory.Models.Flavor

<h2 class="mt-5 mb-4 text-center">Add a New Flavor</h2>
<hr />

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, new { @class = "form-label" })
  @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required"})

  <button class="btn btn-primary mt-2" type="submit" value="Add new flavor">Submit</button>
}
<p class="h5 mt-5">@Html.ActionLink("Show all Flavors", "Index")</p>