<h1 class="mt-5 mb-4 text-center">Welcome to Pierre's Sweet and Savory Treats Market</h1>
<hr />

<p class="h5 mt-3">@Html.ActionLink("See all Flavors", "Index", "Flavors")</p>
<p class="h5 mt-3">@Html.ActionLink("See all Treats", "Index", "Treats")</p>
<p class="h5 mt-3">@Html.ActionLink("Create an account | Login", "Index", "Account")</p>
@if (User.Identity.IsAuthenticated)
{
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <button class="btn btn-primary mt-3" type="submit" value="LogOff">Logout</button>
    }
}